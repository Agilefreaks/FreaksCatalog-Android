<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="freakDetailsViewModel"
            type="com.agilefreaks.freaks_catalog.features.freaks.DetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            tools:context=".FreakDetailsFragment">

            <ProgressBar
                android:id="@+id/progressBar_freak"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/progress_bar_size"
                android:layout_height="@dimen/progress_bar_size"
                android:visibility="@{freakDetailsViewModel.freakDetailsLoaded ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/freak_profile_photo"
                android:layout_width="@dimen/details_profile_photo"
                android:layout_height="0dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/profile_pick_background"
                android:contentDescription="@string/profile_picture"
                android:elevation="@dimen/profile_photo_elevation"
                android:scaleType="fitXY"
                android:visibility="@{freakDetailsViewModel.freakDetailsLoaded ? View.VISIBLE : View.GONE}"
                app:imageUrl="@{freakDetailsViewModel.curFreak.photo}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/profile_image_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/progress_bar_size"
                android:layout_height="@dimen/progress_bar_size"
                app:layout_constraintBottom_toBottomOf="@+id/freak_profile_photo"
                app:layout_constraintEnd_toEndOf="@+id/freak_profile_photo"
                app:layout_constraintStart_toStartOf="@+id/freak_profile_photo"
                app:layout_constraintTop_toTopOf="@+id/freak_profile_photo" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardViewStartG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.044" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/cardViewEndG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.956" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_freak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_view_top_margin"
                android:visibility="@{freakDetailsViewModel.freakDetailsLoaded ? View.VISIBLE : View.GONE}"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="@dimen/details_card_view_radius"
                app:layout_constraintEnd_toEndOf="@id/cardViewEndG"
                app:layout_constraintStart_toStartOf="@id/cardViewStartG"
                app:layout_constraintTop_toTopOf="@+id/freak_profile_photo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/card_view_min_height">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/tsplStartG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.09756" />

                    <TextView
                        android:id="@+id/title_freak"
                        style="@style/FreakScreenTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/title_top_margin"
                        android:text="@{String.format(@string/title_template,freakDetailsViewModel.curFreak.role, freakDetailsViewModel.curFreak.norm)}"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/tsplStartG"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/skills_freak"
                        style="@style/FreakScreenTextStyle"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/freak_description_vertical"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{String.format(@string/skills_template,freakDetailsViewModel.curFreak.skills)}"
                        app:layout_constraintEnd_toStartOf="@+id/descriptionEndG"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/tsplStartG"
                        app:layout_constraintTop_toBottomOf="@+id/description_freak" />

                    <TextView
                        android:id="@+id/project_freak"
                        style="@style/FreakScreenTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/projects_level_top_margin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{String.format(@string/projects_template, freakDetailsViewModel.curFreak.projects)}"
                        app:layout_constraintEnd_toStartOf="@+id/descriptionEndG"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/tsplStartG"
                        app:layout_constraintTop_toBottomOf="@+id/skills_freak" />

                    <TextView
                        android:id="@+id/level_freak"
                        style="@style/FreakScreenTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/projects_level_top_margin"
                        android:lines="1"
                        android:layout_marginBottom="@dimen/level_bot_margin"
                        android:text="@{String.format(@string/level_project,freakDetailsViewModel.curFreak.level)}"
                        app:layout_constraintEnd_toStartOf="@+id/descriptionEndG"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/tsplStartG"
                        app:layout_constraintTop_toBottomOf="@+id/project_freak" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/descriptionEndG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.976" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/descriptionStartG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.024" />

                    <TextView
                        android:id="@+id/description_freak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/freak_description_vertical"
                        android:ellipsize="end"
                        android:text="@{freakDetailsViewModel.curFreak.description}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sec_text_size"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toStartOf="@id/descriptionEndG"
                        app:layout_constraintStart_toEndOf="@id/descriptionStartG"
                        app:layout_constraintTop_toBottomOf="@+id/title_freak" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_bottom_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView_freak" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>