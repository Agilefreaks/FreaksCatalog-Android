<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/freak_card_size"
    android:layout_height="@dimen/freak_card_size"
    android:layout_marginStart="@dimen/freak_card_margin"
    android:layout_marginEnd="@dimen/freak_card_margin"
    android:layout_marginTop="@dimen/freak_card_margin"
    android:background="@drawable/custom_freak_card_border"
    app:cardCornerRadius="@dimen/freak_card_corner_radius"
    >
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:importantForAccessibility="no"
            />

        <TextView
            android:textIsSelectable="false"
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="102dp"
            android:textColor="@color/white"
            android:textAppearance="?attr/textAppearanceHeadline6" />
</com.google.android.material.card.MaterialCardView>